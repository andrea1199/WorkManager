  <div class="container-fluid">
    <div class="row">
      <div class="col-md-4 border-right">
        <h4>Informazioni Personali:</h4>
      </div>
      <div class="col-md-4" id="employeeDetails">
        <form>
          <label for="nome">Nome:</label>
          <span id="nome" class="form-control" contenteditable="false" placeholder="Inserisci il tuo nome">Mario</span>            
          <label for="cognome">Cognome</label>
          <span id="cognome" class="form-control" contenteditable="false" placeholder="Inserisci il tuo cognome">Rossi</span>
          <label for="dataNascita">Data di Nascita</label>
          <span id="dataNascita" class="form-control" contenteditable="false" placeholder="gg/mm/aaaa">01/01/1990</span>
          <label for="telefono">Telefono</label>
          <span id="telefono" class="form-control" contenteditable="true" placeholder="Inserisci il tuo numero di telefono">1234567890</span>
          <label for="email">Email</label>
          <span id="email" class="form-control" contenteditable="true" placeholder="Inserisci la tua email">mario.rossi@example.com</span>
          <label for="descrizione">Descrizione</label>
          <span id="descrizione" class="form-control" contenteditable="true" style="height:auto; min-height:100px;" placeholder="Inserisci una descrizione">Descrizione di esempio</span>
          <button type="button" class="btn btn-primary" id="salva" onclick="salvaDati()" disabled>Salva</button>
        </form>
      </div>
    </div>
  </div>

  <!-- Script di Bootstrap -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <script>
    let datiIniziali = {
      nome: "Mario",
      cognome: "Rossi",
      telefono: "1234567890",
      email: "mario.rossi@example.com",
      dataNascita: "01/01/1990",
      descrizione: "Descrizione di esempio"
    };

    function verificaModifiche() {
      const nome = document.getElementById('nome').innerText.trim();
      const cognome = document.getElementById('cognome').innerText.trim();
      const telefono = document.getElementById('telefono').innerText.trim();
      const email = document.getElementById('email').innerText.trim();
      const dataNascita = document.getElementById('dataNascita').innerText.trim();
      const descrizione = document.getElementById('descrizione').innerText.trim();

      const datiCorrenti = {
        nome,
        cognome,
        telefono,
        email,
        dataNascita,
        descrizione
      };

      // Verifica se ci sono modifiche rispetto ai dati iniziali
      const modificato = Object.keys(datiIniziali).some(key => datiIniziali[key] !== datiCorrenti[key]);

      // Abilita o disabilita il pulsante "Salva" in base alle modifiche
      document.getElementById('salva').disabled = !modificato;
    }

    // Aggiungi event listener per monitorare gli input
    document.querySelectorAll('[contenteditable="true"]').forEach(element => {
      element.addEventListener('input', verificaModifiche);
    });

    function salvaDati() {
      const nome = document.getElementById('nome').innerText.trim();
      const cognome = document.getElementById('cognome').innerText.trim();
      const telefono = document.getElementById('telefono').innerText.trim();
      const email = document.getElementById('email').innerText.trim();
      const dataNascita = document.getElementById('dataNascita').innerText.trim();
      const descrizione = document.getElementById('descrizione').innerText.trim();

      console.log('Nome:', nome);
      console.log('Cognome:', cognome);
      console.log('Telefono:', telefono);
      console.log('Email:', email);
      console.log('Data di Nascita:', dataNascita);
      console.log('Descrizione:', descrizione);

      alert('Dati salvati! Controlla la console per vedere i valori.');

      // Aggiorna i dati iniziali dopo il salvataggio
      datiIniziali = {
        nome,
        cognome,
        telefono,
        email,
        dataNascita,
        descrizione
      };

      // Disattiva il pulsante di salvataggio
      document.getElementById('salva').disabled = true;
    }
  </script>
