<body>
  <div class="tab-pane fade active show">
    <ul class="nav nav-tabs" id="myTab" role="tablist">
      <li class="nav-item">
        <a class="nav-link" id="dash-tab" data-toggle="tab" href="#dash" role="tab" aria-controls="dash" aria-selected="false">Dashboard</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="dirigenti-tab" data-toggle="tab" href="#dirigenti" role="tab" aria-controls="dirigenti" aria-selected="false">Dirigenti</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="dipendenti-tab" data-toggle="tab" href="#dipendenti" role="tab" aria-controls="dipendenti" aria-selected="false">Dipendenti</a>
      </li>
    </ul>

    <div class="tab-content">
      <div class="tab-pane fade" id="dash" role="tabpanel" aria-labelledby="dash-tab">
        <%= render "users/dashboard" %>
      </div>

      <div class="tab-pane fade" id="dirigenti" role="tabpanel" aria-labelledby="dirigenti-tab">
        <%= render "admin/adminSuDirigenti" %>
      </div>

      <div class="tab-pane fade" id="dipendenti" role="tabpanel" aria-labelledby="dipendenti-tab">
        <%= render "admin/adminSuDipendenti" %>
      </div>
    </div>
  </div>
</body>
