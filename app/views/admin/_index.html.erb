<body>
  <div class="tab-pane fade active show">
    <ul class="nav nav-tabs" id="myTab" role="tablist">
      <li class="nav-item">
        <a class="nav-link" id="dash-tab" data-toggle="tab" href="#dash" role="tab" aria-controls="dash" aria-selected="false">Dashboard</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="dirigenti-tab" data-toggle="tab" href="#dirigenti" role="tab" aria-controls="dirigenti" aria-selected="false">Dirigenti</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="dipendenti-tab" data-toggle="tab" href="#dipendenti" role="tab" aria-controls="dipendenti" aria-selected="false">Dipendenti</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="promote-tab" data-toggle="tab" href="#promote" role="tab" aria-controls="promote" aria-selected="false">Promuovi Dipendenti</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="retrocedi-tab" data-toggle="tab" href="#retrocedi" role="tab" aria-controls="retrocedi" aria-selected="false">Retrocedi Dirigenti</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="licenzia-tab" data-toggle="tab" href="#licenzia" role="tab" aria-controls="licenzia" aria-selected="false">Licenzia Dipendenti</a>
      </li>
    </ul>

    <div class="tab-content">
      <div class="tab-pane fade" id="dash" role="tabpanel" aria-labelledby="dash-tab">
        <%= render "users/dashboard" %>
      </div>

      <div class="tab-pane fade" id="dirigenti" role="tabpanel" aria-labelledby="dirigenti-tab">
        <%= render "admin/adminSuDirigenti" %>
      </div>

      <div class="tab-pane fade" id="dipendenti" role="tabpanel" aria-labelledby="dipendenti-tab">
        <%= render "admin/adminSuDipendenti" %>
      </div>
            
      <div class="tab-pane fade" id="promote" role="tabpanel" aria-labelledby="promote-tab">
        <%= render "admin/promote" %>
      </div>
      <div class="tab-pane fade" id="retrocedi" role="tabpanel" aria-labelledby="retrocedi-tab">
        <%= render "admin/retrocedi" %>
      </div>
      <div class="tab-pane fade" id="licenzia" role="tabpanel" aria-labelledby="licenzia-tab">
        <%= render "admin/licenzia" %>
      </div>
    </div>
  </div>
</body>
