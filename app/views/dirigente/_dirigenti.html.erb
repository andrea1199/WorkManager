<head>
    <%= javascript_include_tag 'dirigente' %>
</head>

<body>
    <div class="col-md-4 border-right">
        <h2>Dipendenti</h2>
        <%= form_with url: dirigenti_path, method: :get do %>
            <%= label_tag :dirigente_id, 'Seleziona Dirigente:' %>
            <%= select_tag :dirigente_id, options_from_collection_for_select(@dirigenti, 'id', 'nome_completo'), prompt: 'Seleziona un dirigente' %>
            <%= submit_tag 'Mostra Dettagli' %>
        <% end %>
    </div>

    <% if @selected_dirigente %>
        <div class="col-md-8">
        <h2>Dettagli del Dirigente</h2>
        <p><strong>Nome:</strong> <%= @selected_dirigente.first_name %></p>
        <p><strong>Cognome:</strong> <%= @selected_dirigente.last_name %></p>
        <p><strong>Telefono:</strong> <%= @selected_dirigente.phone %></p>
        <p><strong>Email:</strong> <%= @selected_dirigente.email %></p>
        <p><strong>Azienda:</strong> <%= @selected_dirigente.company %></p>
        <p><strong>Descrizione:</strong> <%= @selected_dirigente.description %></p>
        </div>
    <% end %>
</body>

