<%= javascript_include_tag 'dashboard_changes' %>

<div class="mask d-flex">
  <div class="container">
    <div class="row d-flex justify-content-center">
      <div class="col-12 col-md-9 col-lg-7 col-xl-6">
        <div class="card p-4">
          <h2>Dashboard</h2>
          <div class="row">
            <%= form_for current_user, url: user_update_path, method: :patch do |f| %>
              <div class="form-group">
                <label for="nome">Nome</label>
                <span id="nome" class="form-control" contenteditable="false" placeholder="Inserisci il tuo nome"><%= current_user.nome %></span>
                <%= f.hidden_field :nome, value: current_user.nome %>
              </div>

              <div class="form-group">
                <label for="cognome">Cognome</label>
                <span id="cognome" class="form-control" contenteditable="false" placeholder="Inserisci il tuo cognome"><%= current_user.cognome %></span>
                <%= f.hidden_field :cognome, value: current_user.cognome %>
              </div>

              <div class="form-group">
                <label for="dataNascita">Data di Nascita</label>
                <%= f.date_field :data_di_nascita, class: 'form-control',value: current_user.data_di_nascita %>
              </div>

              <div class="form-group">
                <%= f.label :email, 'Email' %>
                <%= f.email_field :email, class: 'form-control', placeholder: 'Inserisci la tua email' %>
              </div>

              <div class="form-group">
                <%= f.label :descrizione, 'Descrizione' %>
                <%= f.text_area :descrizione, class: 'form-control', placeholder: 'Inserisci una descrizione', style: 'height:auto; min-height:100px;' %>
              </div>

              <div class="form-group">
                <%= f.submit 'Salva', class: 'btn btn-primary', disabled: true %>
              </div>
            <% end %>
              <a href="/"><button class="btn btn-primary">Torna alla home</button></a>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
